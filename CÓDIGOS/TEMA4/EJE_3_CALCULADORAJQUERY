      max-width: 400px;
      box-shadow: 0 10px 25px rgba(0, 0, 0, 0.2);
    }
    .calculator h1 {
      text-align: center;
      margin-bottom: 20px;
      color: #333;
    }
    .calculator p {
      margin: 15px 0 5px;
