<body>
  <div class="calculator">
    <h1>Calculadora Básica</h1>
    <p>Introduce el primer número:</p>
    <input type="text" name="num1" class="num1">
    <p>Introduce el segundo número:</p>
    <input type="text" name="num2" class="num2">
    
    <div class="btn-group">
      <input type="button" class="suma" value="Sumar">
      <input type="button" class="resta" value="Restar">
      <input type="button" class="multiplicacion" value="Multiplicar">
      <input type="button" class="division" value="Dividir">
    </div>
    
    <div class="resultado"></div>
  </div>
  
  <script>
    $(document).ready(function() {
      // Función para obtener los valores de los inputs y convertirlos a números
      function obtenerValores() {
        var num1 = Number($('.num1').val());
        var num2 = Number($('.num2').val());
        return { num1: num1, num2: num2 };
      }
      
      // Sumar
      $('.suma').click(function() {
        var valores = obtenerValores();
        var resultado = valores.num1 + valores.num2;
        $('.resultado').html("El resultado de la suma es: " + resultado);
      });
      
      // Restar
      $('.resta').click(function() {
        var valores = obtenerValores();
        var resultado = valores.num1 - valores.num2;
        $('.resultado').html("El resultado de la resta es: " + resultado);
      });
      
      // Multiplicar
      $('.multiplicacion').click(function() {
        var valores = obtenerValores();
        var resultado = valores.num1 * valores.num2;
        $('.resultado').html("El resultado de la multiplicación es: " + resultado);
      });
      
      // Dividir
      $('.division').click(function() {
        var valores = obtenerValores();
        if (valores.num2 === 0) {
          $('.resultado').html("Error: No se puede dividir entre 0");
        } else {
          var resultado = valores.num1 / valores.num2;
          $('.resultado').html("El resultado de la división es: " + resultado);
        }
      });
    });
  </script>
</body>
